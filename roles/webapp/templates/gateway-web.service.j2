[Unit]
Description=Gateway web interface

[Service]
Type=forking
WorkingDirectory=/home/{{common.deploy_user}}/gateway-web/
EnvironmentFile=/home/{{common.deploy_user}}/gateway-web/.env
ExecStart=/usr/local/bin/puma -p 4567 -d
User={{common.deploy_user}}
Group={{common.deploy_user}}
PIDFile=/home/{{common.deploy_user}}/gateway-web/tmp/pids/puma.pid
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
